# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
DJANGO_SETTINGS_MODULE=admin_dashboard.settings.production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database Configuration
# For Render.com, this will be automatically set from the database service
DATABASE_URL=postgresql://user:password@host:port/database

# Redis Configuration
# For Render.com, this will be automatically set from the Redis service
REDIS_URL=redis://host:port/db

# Email Configuration (SendGrid)
SENDGRID_USERNAME=apikey
SENDGRID_PASSWORD=your-sendgrid-api-key-here

# Sentry Configuration (Optional but recommended)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT_NAME=admin-dashboard

# Security Settings
SECURE_HSTS_SECONDS=3600

# Render.com specific settings
ENABLE_DJANGO_COLLECTSTATIC=1
AUTO_MIGRATE=1
